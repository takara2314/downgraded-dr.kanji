{
    "type": "bubble",
    "body": {
        "type": "box",
        "layout": "vertical",
        "contents": [
            {
                "type": "text",
                "text": "問題",
                "size": "xl",
                "color": "#D97706",
                "weight": "bold"
            },
            {
                "type": "text",
                "text": "次の読みを答えよ。",
                "wrap": true
            },
            {
                "type": "text",
                "text": "${content}",
                "size": "xxl",
                "align": "center",
                "weight": "bold",
                "margin": "lg",
                "wrap": true
            },
            {
                "type": "button",
                "action": {
                    "type": "message",
                    "label": "答えを見る",
                    "text": "answer Reading ${no} ${option}"
                },
                "style": "secondary",
                "height": "sm",
                "margin": "lg"
            },
            {
                "type": "text",
                "text": "Reading ${no} ${option}",
                "size": "sm",
                "color": "#AAAAAA",
                "align": "end",
                "margin": "lg"
            }
        ]
    },
    "styles": {
        "footer": {
            "separator": true
        }
    }
}
